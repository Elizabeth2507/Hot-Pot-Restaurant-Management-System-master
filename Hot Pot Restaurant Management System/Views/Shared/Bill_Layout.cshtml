@using Hot_Pot_Restaurant_Management_System.Common.Authentication
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @{ var userName = Context.User.Identity.Name;
    }
    <div style="height: 50px">
        <table id="tableTopTitle">
            <tr>
                <td id="tdSystemName"><a class="aBrand" href="~/home">Restaurant Managment System</a></td>
                <td id="tdUserInfo">
                    @{ Html.BeginForm("Logout", "Home", FormMethod.Post); }
                    <a href="~/currentuser" class="aVInventory">[ @userName ]</a>
                    <input type="submit" value="Sign Out" class="inputSubmit" />
                    @{ Html.EndForm(); }
                </td>
            </tr>
        </table>
    </div>
    <div style="height: 500px">
        <table id="tableMain">
            <tr id="trIndex">
                <td id="tdIndex" colspan="2">
                    <div>
                        <a href="~/home/frontdeskindex" class="aTitleLink">[ Front desk ]</a>
                        <a href="~/home/warehouseindex" class="aTitleLink">[ Warehouse Home ]</a>
                        <a href="~/home/reportindex" class="aTitleLink">[ Report statistics ]</a>
                        <a href="~/home/systemindex" class="aTitleLink">[ System Management ]</a>
                    </div>
                </td>
            </tr>
            <tr id="trTitle">
                <td id="tdMenuTitle">> @ViewBag.Title</td>
                <td id="tdContentTitle">
                    <div>
                        <a href="~/bill" class="aTitleLink">[ Bill business ]</a>
                        <a href="~/dish" class="aTitleLink">[ Dishes management ]</a>
                        <a href="~/discount" class="aTitleLink">[ Discount management ]</a>
                        <a href="~/member" class="aTitleLink">[ Member management ]</a>
                    </div>
                </td>
            </tr>
            <tr id="trContent">
                <td>
                    <div id="divMenu">
                        <table id="tableMenu">
                            <tr class="trMenu">
                                <td class="tdMenu"><a href="~/bill/addpage">Order</a>
                                </td>
                            </tr>
                            <tr class="trMenu">
                                <td class="tdMenu"><a href="~/bill/edittablepage">Change orders</a>
                                </td>
                            </tr>
                            <tr class="trMenu">
                                <td class="tdMenu"><a href="~/bill/paytablepage">Checkout</a>
                                </td>
                            </tr>
                            <tr class="trMenu">
                                <td class="tdMenu"><a href="~/bill/servingtable">Opening information</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                </td>
                <td id="tdContent">
                    @RenderBody()
                </td>
            </tr>
        </table>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/MyScript.js")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
