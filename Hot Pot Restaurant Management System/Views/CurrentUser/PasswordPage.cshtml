@using Hot_Pot_Restaurant_Management_System.Models.ViewModels;
@model UserViewResult
@{ ViewBag.Title = "Change password"; }

<td>
    <div id="divMenu">
        <table id="tableMenu">
            <tr class="trMenu">
                <td class="tdMenu"><a href="~/currentuser/index">View user information</a></td>
            </tr>
            <tr class="trMenu">
                <td class="tdMenu"><a href="~/currentuser/passwordpage">change password</a></td>
            </tr>
        </table>
    </div>
</td>
<td id="tdContent">
    <div id="divContent">
        <div>
            @{ Html.BeginForm("ChangePassword", "CurrentUser", FormMethod.Post, new { id = "formPost" }); }

            <div>
                @Html.HiddenFor(w => w.ID)
                @Html.HiddenFor(w => w.UserName)

                <label for="OldPassword">Old Password</label>
                <input data-val="true" data-val-required="Missing original password" id="OldPassword" name="OldPassword" type="password" />

                <br />
                <br />

                <label for="Password">New password</label>
                @Html.PasswordFor(w => w.Password)

                <br />
                <br />

                <label for="Repeat">Confirm the entry</label>
                <input data-val="true" data-val-required="Missing password confirmation" id="Repeat" name="Repeat" type="password" />
            </div>

            <div id="divValidation" class="validation-summary-errors">
                <ul id="ulValidation"></ul>
            </div>
            <div>@Html.ValidationSummary()</div>
            <br />
            <input type="submit" value="Save changes" class="inputSubmit" onclick="return EncryptPassword()" />
            @{ Html.EndForm(); }
        </div>
    </div>
</td>






