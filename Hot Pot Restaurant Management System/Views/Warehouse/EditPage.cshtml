@using Hot_Pot_Restaurant_Management_System.Models.ViewModels;
@model WarehouseViewResult
@{ ViewBag.Title = "Edit the warehouse"; Layout = "~/Views/Shared/Warehouse_Layout.cshtml"; }

<td>
    <div id="divMenu">
        <table id="tableMenu">
            <tr class="trMenu">
                <td class="tdMenu"><a href="~/warehouse/index">Warehouse query</a></td>
            </tr>
            <tr class="trMenu">
                <td class="tdMenu"><a href="~/warehouse/addpage">Add a warehouse</a></td>
            </tr>
        </table>
    </div>
</td>
<td id="tdContent">
    <div id="divContent">
        <div>
            @{ Html.BeginForm("Edit", "Warehouse", new { id = Model.ID }, FormMethod.Post); }

            <div>
                @Html.LabelFor(w => w.ShortID)
                @Html.TextBoxFor(w => w.ShortID)

                @Html.LabelFor(w => w.Name)
                @Html.TextBoxFor(w => w.Name)
            </div>

            <div><span id="ValidationSpan"></span></div>
            <div>@Html.ValidationSummary()</div>
            <br />
            <input type="submit" value="Save changes" class="inputSubmit" />
            @{ Html.EndForm(); }
        </div>
        <div>
            <br />
            @{ Html.BeginForm("Delete", "Warehouse", new { id = Model.ID }, FormMethod.Post); }
            <input type="submit" value="Delete" class="inputSubmit" style="color: red" />
            @{ Html.EndForm(); }
        </div>
    </div>
</td>





